<div class="container">
    <div class="row mt-4">
        <div class="col-4  pt-2 toBeDevoured">
            <h2>Burgers Waiting to be Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>
                        {{this.id}}. {{this.burger_name}}
                        <button data-burgerid="{{this.id}}" class="devourBurger">Devour Burger!</button>
                    </p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
            {{!-- list of to be devoured will be added here --}}
        </div>
        <div class="col-4 burgerForm">
            <div class="row">
                <div class="col-12">
                    <img src="http://clipart-library.com/data_images/149301.png" alt="Burger Image" width="320"
                        height="237">
                    <div class="row">
                        <div class="col-12 mt-4">
                            <h1>Eat-Da-Burger!</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 ml-3 mt-2">
                    <form id="addBurger" action="/" method="POST">
                        <textarea type="text" id="newBurgerName" name="burger"></textarea>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {{!-- <div class="row"> --}}
        <div class="col-4 pt-2 alreadyDevoured">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>
                        {{this.id}}. {{this.burger_name}}
                    </p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
            {{!-- list of already devoured will be added here --}}
        </div>
        {{!-- </div> --}}
    </div>
</div>